<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/stats_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            >

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current tasks: "
        android:id="@+id/alltasks"
        android:textSize="20dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="75dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        android:textSize="20dp"
        android:id="@+id/txtVse"
        android:layout_marginTop="125dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_below="@+id/alltasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed tasks: "
        android:textSize="20dp"
        android:id="@+id/completedtasks"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="55dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        android:textSize="20dp"
        android:layout_below="@+id/txtVse"
        android:id="@+id/txtObkljukano"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/deletedtasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completedtasks"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="50dp"
        android:text="Deleted tasks: "
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        android:textSize="20dp"
        android:layout_below="@+id/txtObkljukano"
        android:id="@+id/txtIzbrisano"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_below="@+id/deletedtasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total tasks: "
        android:textSize="20dp"
        android:id="@+id/totaltasks"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        android:textSize="20dp"
        android:layout_below="@+id/txtIzbrisano"
        android:id="@+id/txtTotal"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circle_progress_bar"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="----"
            android:textSize="28sp"
            android:textStyle="bold"/>



    </RelativeLayout>




</RelativeLayout>